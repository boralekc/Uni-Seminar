BROWSER_TAG=local

# Compose-профили для стеков агентов
COMPOSE_PROFILES=agents,runner,tests

# ===== WebMall local (их compose) =====
# Порты сервисов WebMall на твоём хосте
FRONTEND_PORT=8080
SHOP1_PORT=8081
SHOP2_PORT=8082
SHOP3_PORT=8083
SHOP4_PORT=8084
ELASTIC_PORT=9200

# Готовые базовые URL (для подстановки в задания)
FRONTEND_URL=http://localhost:${FRONTEND_PORT}
SHOP1_URL=http://localhost:${SHOP1_PORT}
SHOP2_URL=http://localhost:${SHOP2_PORT}
SHOP3_URL=http://localhost:${SHOP3_PORT}
SHOP4_URL=http://localhost:${SHOP4_PORT}

# Админ WordPress (для чистой инициализации)
WP_ADMIN_USER=admin
WP_ADMIN_PASS=admin
WP_ADMIN_EMAIL=admin@example.com

# Сколько демо-товаров создавать в каждом магазине при засеве
WOO_SAMPLE_COUNT=3
